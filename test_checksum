#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <pcap.h>
#include <netinet/ether.h>
#include <netinet/ip.h>
#include <netinet/tcp.h>
#include <arpa/inet.h>
//#include <regex>
#define BUFSIZE 1500

void callback(pcap_pkthdr *pkt_header, const u_char *pkt_data);
void print_mac(uint8_t *mac, uint8_t *box);
void print_host(u_char *data, int leng);
#pragma pack(push,1)
struct pseudo
{
    uint32_t sd;
    uint32_t dd;
    uint8_t tcppro; //?
    uint8_t reserve; //?
    uint16_t offset;
};
/*
